<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mingrisoft.mymirror">
    <!-- 写存储卡 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 读存储卡 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- 访问照相设备权限 -->
    <uses-permission android:name="android.permission.CAMERA" /> <!-- 修改全局系统设置 -->
    <uses-permission android:name="android.permission.WRITE_SETTINGS" /> <!-- 允许挂载可移动存储 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" /> <!-- 允许程序录制音频 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" /> <!-- 保持进程在休眠时从屏幕消失 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- 相机 -->
    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/jingzi"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".activity.GuideActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait" /> <!-- 这个位置添加其它的activity -->
        <activity
            android:name=".activity.HintActivity"
            android:theme="@style/MyTheme" />
        <activity android:name=".activity.PhotoFrameActivity" />

        <service
            android:name=".service.ChangePictureFrameService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".activity.ShowPictureActivity" />
        <activity android:name=".activity.ImageActivity" />
    </application>

</manifest>